{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1
    },
    "description": {
      "type": "text",
      "required": true
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "opinions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::opinion.opinion",
      "mappedBy": "game"
    },
    "authors": {
      "type": "string",
      "required": true
    },
    "artists": {
      "type": "string",
      "required": true
    },
    "publisher": {
      "type": "string",
      "required": true
    },
    "players_from": {
      "type": "integer",
      "min": 1
    },
    "players_to": {
      "type": "integer",
      "min": 1
    },
    "time_from": {
      "type": "integer",
      "min": 5
    },
    "game_id": {
      "type": "uid",
      "targetField": "title"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "games"
    },
    "time_to": {
      "type": "integer"
    },
    "age": {
      "type": "string"
    },
    "rating": {
      "type": "decimal",
      "default": 0
    }
  }
}
